@model List<Category>

<partial name="_Notification"/>

<div class="container">

<table class="table table-bordered table-striped">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h2 class="text-primary">
				CATEGORY LIST
			</h2>
		</div>

		<div class="col-6 text-end">
			<a asp-controller="Category" asp-action="Create" class="btn" style="background-color: #000;
			color: #fff;
			border-radius: 5px;">
			<i class="bi bi-plus-circle"></i>
			Add New Category
			</a>
		</div>
	</div>
	<thead>
	<tr>
		<th>Category Name</th>
		<th>Display Order</th>
		<th>Action</th>
	</tr>
	</thead>

	<tbody>
		@foreach(var obj in Model){
		<tr>
			<td>@obj.Name</td>
			<td>@obj.DisplayOrder</td>
			<td>
				<div class="w-75 btn-group" style="display:flex; gap:30px" role="group">
					<a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" ><i class="btn btn-primary bi bi-pencil-square" style="border-radius:20px"></i></a>
					<a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id"><i class="btn btn-danger bi bi-trash3-fill" style="border-radius:20px"></i></a> 
				</div>
			</td>
		</tr>
		}
	</tbody>
</table>

</div>